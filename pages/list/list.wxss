/* pages/list/list.wxss */
.search{
  background:#eeeeee;
  padding: 30rpx 20rpx;
}

.search .search-input{
  background: #fff;
  height:60rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  font-size: 12px;
  color:#454545;
  border-radius: 4px;
}

.search .search-input icon{
  margin-right:10rpx;
  margin-left: 20rpx;
}

.good-sort{
  display: flex;
  height: 100rpx;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #e9e9e9;
}
.active{
  color: #3880f7;
}

.goods-item{
  display: flex;
  justify-content:space-between;
  padding: 20rpx;
  border-bottom: 1px solid #e9e9e9;
}
.goods-item image{
  height: 200rpx;
  width: 200rpx;
}
.goods-item-right{
  flex: 1;
  padding-left: 20rpx;
  flex-direction:column;
  justify-content: space-between;
}
.goods-title{
  font-size: 14px;
  text-overflow:ellipsis;
  display:-webkit-box;
  overflow: hidden;
  /*控制在3行*/
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.goods-price{
  color: #3880f7;
  margin-top: 50rpx;
}
.loading{
  padding: 20rpx;
  color:#ccc;
  text-align: center;
  font-size:14px;
}