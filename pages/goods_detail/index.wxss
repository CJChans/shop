.swiper{
  height: 720rpx;
}
.swiper image{
  width: 100%;
  height: 100%;
}
.goods-info{
  padding: 20rpx;
  border-bottom: 20rpx solid #eee;
}
.goods-price{
  font-size: 20px;
  color: #3880f7;
  margin-bottom: 30rpx;
}
.goods-title{
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.goods-title-left{
  flex: 1;
  font-size: 14px;
  color: #575757;

  text-overflow:ellipsis;
  display:-webkit-box;
  overflow: hidden;
  /*控制在3行*/
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;

}
.goods-star{
  width: 120rpx;
  font-size: 12px;
  color: #a9a9a9;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
  border-left:1px solid #bdbdbd;
}
.express{
  color:#999;
  font-size:14px;
} 
.rich{
   padding-bottom: 100rpx;
}
.footer{
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;

}
.btn-left{
  display: flex;
  width: 20%;
  font-size: 12px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999999;
}
.btn-right{
  width: 30%;
  line-height: 100rpx;
  text-align: center;
  background: #f4b73f;
  color: #fff;
}
.btn-right:last-child{
  background: #3880f7;
}
.contact{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 20%;
  opacity: 0;
  height: 100rpx;
}